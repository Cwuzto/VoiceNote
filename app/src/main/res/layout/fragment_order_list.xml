<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/bg_soft_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hoá đơn"
            android:textColor="#0F172A"
            android:textSize="26sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btnSearch"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_circle_soft"
            android:padding="8dp"
            android:src="@drawable/ic_search_24" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/searchBar"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/edtSearch"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:hint="Tìm theo hàng hóa, khách hàng"
            android:background="@drawable/bg_input_pill"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:imeOptions="actionSearch"
            android:singleLine="true" />

        <TextView
            android:id="@+id/btnCancelSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Hủy"
            android:textStyle="bold"
            android:textColor="#1565FF"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/chipTime"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:gravity="center"
            android:paddingLeft="14dp"
            android:paddingRight="10dp"
            android:text="Toàn thời gian"
            android:textColor="#374151"
            android:textStyle="bold"
            android:background="@drawable/bg_filter_button"
            android:drawableEnd="@drawable/ic_arrow_down_24"
            android:drawablePadding="4dp"/>

        <Space android:layout_width="12dp" android:layout_height="1dp"/>

        <TextView
            android:id="@+id/chipStatus"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:gravity="center"
            android:paddingLeft="14dp"
            android:paddingRight="10dp"
            android:text="Tất cả đơn"
            android:textColor="#374151"
            android:textStyle="bold"
            android:background="@drawable/bg_filter_button"
            android:drawableEnd="@drawable/ic_arrow_down_24"
            android:drawablePadding="4dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvEmptyHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Danh sách đơn hàng đang trống.\nBấm Bán hàng để tạo đơn"
        android:textAlignment="center"
        android:paddingTop="48dp"
        android:textColor="#6B7280"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvOrder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:clipToPadding="false"/>

        <LinearLayout
            android:id="@+id/stickyHeaderContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:gravity="center_vertical"
            android:background="@drawable/bg_soft_gradient"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/tvStickyDateHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="Chủ Nhật, 09/11/2025"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#374151" />

            <TextView
                android:id="@+id/tvStickyDateTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="461,166"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#1565FF" />
        </LinearLayout>

    </FrameLayout>
</LinearLayout>