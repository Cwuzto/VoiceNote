<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_soft_gradient">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_close_24"
            app:tint="#111827"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bán hàng"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#0F172A"
            android:layout_marginStart="8dp"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/btnDone"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:paddingHorizontal="18dp"
            android:text="Xong"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_button_primary"/>
    </LinearLayout>

    <!-- Nội dung cuộn -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Ô Khách hàng / bàn -->
            <LinearLayout
                android:id="@+id/rowCustomer"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/bg_card_16"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_person_24"
                    app:tint="#111827"/>

                <TextView
                    android:id="@+id/tvCustomer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:text="bàn 1"
                    android:textSize="16sp"
                    android:textColor="#0F172A"/>

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:textStyle="bold"
                    android:src="@drawable/ic_chevron_right_24"
                    app:tint="#9CA3AF"/>
            </LinearLayout>

            <!-- Danh sách dòng hàng -->
            <LinearLayout
                android:id="@+id/containerLines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            <!-- Tổng cộng -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"
                android:layout_marginTop="8dp"
                android:paddingHorizontal="4dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tổng cộng"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#0F172A"/>

                <TextView
                    android:id="@+id/tvTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="70,000"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#0F172A"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Thanh nhập nhanh giống hình -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btnQuickGrid"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/bg_circle_soft"
            android:padding="14dp"
            android:src="@drawable/ic_grid_24"
            app:tint="#111827"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:background="@drawable/bg_card_16"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp">

            <EditText
                android:id="@+id/edtQuickInput"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:hint="Nhập tên hàng + giá"
                android:background="@android:color/transparent"/>

            <ImageButton
                android:id="@+id/btnMic"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_mic_24"
                app:tint="#111827"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
