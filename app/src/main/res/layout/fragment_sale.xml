<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_soft_gradient">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="8dp"
            android:src="@drawable/ic_close_24"
            android:contentDescription="@string/close" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bán hàng"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/btnDone"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:gravity="center"
            android:text="Xong"
            android:textStyle="bold"
            android:textColor="#5E7BFF"
            android:background="@drawable/bg_pill_soft"/>
    </LinearLayout>

    <!-- Ô khách hàng/phòng bàn -->
    <EditText
        android:id="@+id/edtCustomer"
        android:layout_below="@id/header"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Khách hàng, phòng bàn..."
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@drawable/bg_input_pill"
        android:inputType="textPersonName"/>

    <!-- Khối hướng dẫn giữa màn -->
    <LinearLayout
        android:layout_below="@id/edtCustomer"
        android:layout_above="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <TextView
            android:id="@+id/tvTitle"
            android:text="Đơn này bạn bán hàng gì?"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#212B36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"/>

        <TextView
            android:id="@+id/tvSub"
            android:text="Chat tên hàng hoặc đọc tên hàng để tính tiền nhanh."
            android:textColor="#6B7280"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <!-- Thanh nhập đáy -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:background="@android:color/transparent">

        <!-- Nút lưới trái -->
        <ImageButton
            android:id="@+id/btnGrid"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/bg_circle_soft"
            android:src="@drawable/ic_grid_24"
            android:contentDescription="Grid"
            app:tint="#1F2937"/>

        <!-- Ô nhập trung tâm -->
        <EditText
            android:id="@+id/edtLine"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:hint="Nhập số lương + tên hàng + giá"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@drawable/bg_input_pill"
            android:inputType="text"/>

        <!-- Nút mic phải -->
        <ImageButton
            android:id="@+id/btnMic"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/bg_circle_soft"
            android:src="@drawable/ic_mic_24"
            android:contentDescription="Mic"
            app:tint="#1F2937"/>
    </LinearLayout>

</RelativeLayout>
