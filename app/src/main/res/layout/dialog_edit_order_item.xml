<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <TextView
            android:text="Chỉnh sửa"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#0F172A"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_close_24"/>
    </LinearLayout>

    <TextView
        android:text="Tên hàng"
        android:textColor="#6B7280"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edtName"
        tools:text="Kim chi"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:background="@drawable/bg_field_outline_blue"/>

    <TextView
        android:text="Số lượng"
        android:textColor="#6B7280"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/btnDecQty"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="–"
            android:textSize="20sp"
            android:background="@drawable/bg_circle_soft"/>
        <EditText
            android:id="@+id/edtQty"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:inputType="number"
            android:background="@drawable/bg_field_outline_blue"
            tools:text="1"/>
        <TextView
            android:id="@+id/btnIncQty"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="+"
            android:textSize="20sp"
            android:background="@drawable/bg_circle_soft"/>
    </LinearLayout>

    <TextView
        android:text="Giá bán"
        android:textColor="#6B7280"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/btnDecPrice"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="–"
            android:textSize="20sp"
            android:background="@drawable/bg_circle_soft"/>
        <EditText
            android:id="@+id/edtPrice"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:inputType="number"
            android:background="@drawable/bg_field_outline_blue"
            tools:text="20,000"/>
        <TextView
            android:id="@+id/btnIncPrice"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="+"
            android:textSize="20sp"
            android:background="@drawable/bg_circle_soft"/>
    </LinearLayout>

    <TextView
        android:text="Ghi chú"
        android:textColor="#6B7280"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edtNote"
        android:hint="Nhập ghi chú"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:background="@drawable/bg_field_outline_blue"/>

    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="Xoá"
            android:paddingHorizontal="16dp"
            android:textStyle="bold"
            android:textColor="#D91C1C"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:minWidth="120dp"
            android:gravity="center"
            android:text="Lưu"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_button_primary"/>
    </LinearLayout>
</LinearLayout>