<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="8dp">

    <FrameLayout
        android:id="@+id/chipBox"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/bg_chip_pastel"
        android:elevation="1dp"
        android:foreground="?attr/selectableItemBackgroundBorderless">

        <!-- Dấu trừ để xoá (ẩn mặc định, bật bằng long-press) -->
        <TextView
            android:id="@+id/ivRemove"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="start|top"
            android:gravity="center"
            android:text="–"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_badge_remove"
            android:visibility="gone"/>

        <!-- Badge số lần chọn -->
        <TextView
            android:id="@+id/tvBadge"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="end|top"
            android:gravity="center"
            android:background="@drawable/bg_badge_circle"
            android:text="1"
            android:textSize="10sp"
            android:textColor="#FFFFFF"
            android:visibility="gone"/>

        <!-- Initial (3R / PB / BB) -->
        <TextView
            android:id="@+id/tvInitial"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PB"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#1E293B"/>
    </FrameLayout>

    <!-- Tên món dưới chip -->
    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Phở bò"
        android:textSize="12sp"
        android:textColor="#111827"/>
</LinearLayout>
