<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.voicenote">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="Voice Note"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VoiceNote">
        <activity
            android:name=".MainActivity"
            android:exported="false"/>

        <activity
            android:name=".ui.splash.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.VoiceNote">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.VoiceNote"/>

        <activity
            android:name=".ui.auth.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.VoiceNote" />

        <activity
            android:name="com.example.voicenote.ui.order.OrderDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.VoiceNote" />

        <activity
            android:name="com.example.voicenote.ui.order.OrderEditActivity"
            android:exported="false"
            android:theme="@style/Theme.VoiceNote" />

        <activity
            android:name=".ui.sale.SaleActivity"
            android:exported="false"
            android:theme="@style/Theme.VoiceNote"
            android:windowSoftInputMode="adjustResize"/>

        <activity
            android:name=".ui.auth.CreateStoreActivity"
            android:exported="false"
            android:theme="@style/Theme.VoiceNote" />

        <activity
            android:name=".ui.more.EmployeeListActivity"
            android:exported="false"
            android:theme="@style/Theme.VoiceNote" />

        <activity
            android:name=".ui.more.ProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.VoiceNote" />

        <activity
            android:name=".ui.more.StoreInfoActivity"
            android:exported="false"
            android:theme="@style/Theme.VoiceNote" />

    </application>

</manifest>